{
  "name": "logoIt",
  "version": "1.0.0",
  "description": "Logo Image Builder",
  "main": "index.js",
  "scripts": {
    "test": "jshint --config .jshintrc . && mocha -R list test/*.js",
    "run": "node .",
    "dbuild": "npm prune --production; docker build -t yieme/logo.img .",
    "drun": "export PORT=$(pkg app.port); docker run -p ${PORT}:3000 --rm --name logo.img yieme/logo.img; docker ps -a"
  },
  "repository": {
    "type": "git",
    "url": "https://yieme@github.com/yieme/logo.img.git"
  },
  "author": "yieme",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yieme/logo.img/issues"
  },
  "app": {
    "port": 3000
  },
  "devDependencies": {
    "jshint": "^2.6.0",
    "mocha": "^2.1.0",
    "pkg-cli": "^0.3.0",
    "should": "^4.6.5"
  },
  "dependencies": {
    "convar": "^1.1.2",
    "express": "^4.11.2",
    "hogan.js": "^3.0.2",
    "nightmare": "^1.7.0",
    "nightmare-screenshot": "0.0.1"
  }
}
